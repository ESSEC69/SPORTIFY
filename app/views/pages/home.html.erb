<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,36,61,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://static.pexels.com/photos/8983/pexels-photo.jpeg');">
  <div class="banner-content">
    <h1>Sportify</h1>
    <p>Le plus grand terrain de sport</p>
    <div class="container">
      <div class="row">
        <%= form_tag("/search/index", method: "get", class: "index-search") do %>
          <div class="xs-10">
            <%= text_field_tag(:q, "", class: 'form-control', :autocomplete => 'false') %>
          </div>
          <p></p>
          <div class="xs-2">
            <%= submit_tag("Chercher", :id=>"button", :class=>"btn btn-primary", :name=>"submit") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row results-container">
    <table class="table table-striped results-table">
    </table>
  </div>
</div>

