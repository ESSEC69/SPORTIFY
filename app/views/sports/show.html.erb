<div class="text-center sport-header" style="background-image: linear-gradient(-225deg, rgba(0,36,61,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= asset_path "#{@sport.id}/banner.jpg" %>')">
  <div class="sport-title">
    <h1> <%=@sport.name%> </h1>
    <h3> <%=@sport.description%></h3>
  </div>
</div>
<div class="container">
  <div class="row">
    <h4>Epreuves</h4>
    <% @trials.each do |trial| %>
    <%= link_to trial.name, trial_path(trial), {class: "btn btn-primary"} %>
    <%end%>
  </div>
</div>



